<root>
    <ruleSequence name="isExampleDomainResponse">
        <!--http://www.example.com/-->
        <rule type="contains" value="Example Domain"/>
        <rule type="and"/>
        <!--as we are looking for response only-->
        <rule type="contains" value="200 OK"/>
    </ruleSequence>

    <replacementSequence name="titleReplacement">
        <replacement key="Example Domain" value="The Greatest Domain Ever"/>
        <replacement key="More information..." value="Stacy's new tattoo... "/>
    </replacementSequence>
    <processor>
        <message>
            <ruleSequences>
                <ruleSequence reference="$isExampleDomainResponse"/>
                <ruleSequence name="alwaysTrue">
                    <!--dummy true rule-->
                    <rule type="true"/>
                </ruleSequence>
            </ruleSequences>
            <replacementSequences>
                <replacementSequence reference="$titleReplacement"/>
                <replacementSequence name="otherReplacement">
                    <replacement key="This domain" value="This SATAN"/>
                </replacementSequence>
            </replacementSequences>
        </message>
    </processor>
</root>